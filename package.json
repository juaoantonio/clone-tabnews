{
  "name": "clone-tabnews",
  "version": "1.0.0",
  "description": "Clone do WebApp TabNews do Filipe Deschamps",
  "main": "index.js",
  "scripts": {
    "dev": "npm run services:up:wait && npm run migration:up && next dev",
    "test": "npm run services:up && concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
    "test:watch": "jest --watch --runInBand",
    "services:up": "docker compose -f infra/compose.yaml up -d",
    "services:up:wait": "docker compose -f infra/compose.yaml up -d --wait",
    "services:stop": "docker compose -f infra/compose.yaml stop",
    "services:down": "docker compose -f infra/compose.yaml down",
    "migrations:create": "node-pg-migrate --migrations-dir infra/migrations create",
    "migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
    "lint:prettier:check": "prettier --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:eslint:check": "next lint --dir .",
    "lint:eslint:fix": "eslint --fix",
    "lint:secretlint:check": "pnpm exec secretlint \"**/*\"",
    "prepare": "husky",
    "commit": "cz"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "async-retry": "1.3.3",
    "dotenv": "16.4.5",
    "dotenv-expand": "11.0.6",
    "eslint": "8.57.0",
    "next": "14.2.5",
    "node-pg-migrate": "7.6.1",
    "pg": "8.12.0",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@commitlint/cli": "19.4.0",
    "@commitlint/config-conventional": "19.8.1",
    "@jest/globals": "29.7.0",
    "@secretlint/secretlint-rule-aws": "10.2.1",
    "@secretlint/secretlint-rule-preset-recommend": "10.2.1",
    "@types/jest": "29.5.10",
    "commitizen": "4.3.1",
    "concurrently": "8.2.2",
    "cz-conventional-changelog": "3.3.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-jest": "28.8.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "prettier": "3.0.2",
    "secretlint": "10.2.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
